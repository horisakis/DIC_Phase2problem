<div class="container">
  <h2>つぶやき一覧</h2>
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <div class="">
    <div class="">
      <div class="row row-eq-height">
        <% @tweets.each do |tweet| %>
        <div class="col-md-5 col-md-offset-1 col-xs-12">

          <div class="panel panel-default">
            <div class="tweet-content panel-body"><%= tweet.content %></div>
            <div class="tweet-footer panel-footer clearfix">
              <div class="tweet-time"><%= tweet.updated_at.in_time_zone('Tokyo') %></div>
              <div class=" btn-content">
                <span class="btn btn-info">
                  <%= link_to "編集",
                              edit_tweet_path(tweet.id),
                              data: {confirm: "本当に編集していいですか？"} %>
                </span>
                <span class="btn btn-danger">
                  <%= link_to "削除",
                              tweet_path(tweet.id),
                              method: :delete,
                              data: {confirm: "本当に削除してもいいですか？"} %>
                </span>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
